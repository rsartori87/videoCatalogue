{% extends 'base.html.twig' %}

{% block title %}
    Indice video
{% endblock %}

{% block body %}
    {% include "fragment/menu.html.twig" %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2>Ricerca</h2>
                {{ form_start(searchForm) }}
                    {{ form_widget(searchForm) }}
                    <button type="submit" class="btn btn-primary">Submit</button>
                {{ form_end(searchForm) }}
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>Video List</h1>
            </div>
            <div class="grid col-md-12">
                {% for file in files %}
                    <a href="{{ path("video", {"id": file.id}) }}"><img src="/thumbnails{{ asset(file.thumbnail) }}" class="img-responsive grid-item"></a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://npmcdn.com/masonry-layout@4.0/dist/masonry.pkgd.min.js"></script>
    <script>
        $('.grid').masonry({
            itemSelector: '.grid-item',
            columnWidth: 200
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .grid-item { width: 20%; }
    </style>
{% endblock %}